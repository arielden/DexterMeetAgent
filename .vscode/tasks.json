{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ðŸš€ Iniciar DexterMeetAgent",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/python",
            "args": [
                "start_simple.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "default"
            },
            "problemMatcher": [],
            "detail": "Inicia el agente DexterMeet con workflow optimizado",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "ðŸ”§ Activar Entorno Virtual",
            "type": "shell",
            "command": "source",
            "args": [
                "${workspaceFolder}/activate_env.sh"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "detail": "Activa el entorno virtual y verifica dependencias"
        },
        {
            "label": "ðŸ§ª Verificar Audio",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/python",
            "args": [
                "-c",
                "import audio_capture; ac = audio_capture.AudioCapture(); ac.list_audio_devices()"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "detail": "Lista dispositivos de audio disponibles",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "ðŸ“¦ Instalar Dependencias",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/pip",
            "args": [
                "install",
                "-r",
                "requirements.txt"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "detail": "Instala todas las dependencias del proyecto",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}